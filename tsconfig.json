{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": [
    "classes/**/*",
    "constants/**/*",
    "interfaces/**/*",
    "src/**/*",
    "data/*.json"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
